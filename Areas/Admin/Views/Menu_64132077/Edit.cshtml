@model WebNoiThat_64132077.Models.EF.Menu

@{
    ViewBag.Title = "Cập nhật";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@section header{
    <div class="content-header">
        <div class="row mb-3">
            <div class="col-sm-6">
                <h3 class="m-0">Chỉnh sửa menu</h3>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/Admin/Home_64132077">Home</a></li>
                    <li class="breadcrumb-item"><a href="/Admin/Menu_64132077">Menu</a></li>
                    <li class="breadcrumb-item active">Chỉnh sửa</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div>
}
<section class="section">
    <div class="section-body">
        <div class="card">
            @using (Html.BeginForm("Edit", "Menu_64132077", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <div class="card-header">
                    <h4>Thông tin menu</h4>
                </div>
                <div class="card-body">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <!-- Tên menu -->
                    <div class="form-group">
                        @Html.LabelFor(model => model.Name, new { @class = "control-label col-md-6" })
                        <div class="col-md-12">
                            @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <!-- Liên kết menu -->
                    <div class="form-group">
                        @Html.LabelFor(model => model.Link, new { @class = "control-label col-md-6" })
                        <div class="col-md-12">
                            @Html.TextBoxFor(model => model.Link, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Link, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <!-- Loại menu -->
                    <div class="form-group">
                        @Html.LabelFor(model => model.TypeID, new { @class = "control-label col-md-6" })
                        <div class="col-md-12">
                            @Html.DropDownListFor(model => model.TypeID, (SelectList)ViewBag.MenuTypes, "Chọn loại menu", new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.TypeID, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <!-- Mục tiêu mở liên kết -->
                    <div class="form-group">
                        @Html.LabelFor(model => model.Target, new { @class = "control-label col-md-6" })
                        <div class="col-md-12">
                            @Html.TextBoxFor(model => model.Target, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Target, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <!-- Vị trí menu -->
                    <div class="form-group">
                        @Html.LabelFor(model => model.Position, new { @class = "control-label col-md-6" })
                        <div class="col-md-12">
                            @Html.TextBoxFor(model => model.Position, new { @class = "form-control", type = "number" })
                            @Html.ValidationMessageFor(model => model.Position, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <!-- Trạng thái menu -->
                    <div class="form-group d-flex">
                        @Html.LabelFor(model => model.Status, new { @class = "control-label col-md-3 col-lg-1" })
                        <div class="col-md-9">
                            <div class="checkbox">
                                @Html.CheckBoxFor(model => model.Status)
                                @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>

                    <!-- Nút sửa và quay lại -->
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-12 d-flex">
                            <input type="submit" value="Save" class="btn btn-outline-primary mr-4" />
                            @Html.ActionLink("Back", "Index", null, new { @class = "btn btn-outline-dark" })
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
@section script{
    <script src="~/Scripts/jsConvert.js"></script>
}
@model WebNoiThat_64132077.Models.EF.Feedback

@{
    ViewBag.Title = "Chi tiết phản hồi";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@section header {
    <div class="content-header">
        <div class="row mb-3">
            <div class="col-sm-6">
                <h3 class="m-0">Chi tiết phản hồi</h3>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a style="text-decoration: none" href="/Admin/Home_64132077">Home</a></li>
                    <li class="breadcrumb-item"><a style="text-decoration: none" href="/Admin/Support_64132077">Phản hồi</a></li>
                    <li class="breadcrumb-item active">Chi tiết</li>
                </ol>
            </div>
        </div>
    </div>
}

<div class="card">
    <div class="card-header">
        <h4>Thông tin phản hồi</h4>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <p><strong>Tên khách hàng:</strong> @Model.Name</p>
                <p><strong>Email:</strong> @Model.Email</p>
                <p><strong>Số điện thoại:</strong> @Model.Phone</p>
                <p><strong>Địa chỉ:</strong> @Model.Address</p>
            </div>
            <div class="col-md-6">
                <p><strong>Ngày tạo:</strong> @(Model.CreateDate.HasValue ?Model.CreateDate.Value.ToString("dd/MM/yyyy"):"")</p>
                <p><strong>Ngày cập nhật:</strong>@(Model.UpdateDate.HasValue ?Model.UpdateDate.Value.ToString("dd/MM/yyyy"):"")</p>
                <p><strong>Trạng thái:</strong> @(Model.Status ? "Đã phản hồi" : "Chưa phản hồi")</p>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-12">
                <p><strong>Chi tiết phản hồi:</strong></p>
                <p>@Html.Raw(Model.Detail)</p>
            </div>
        </div>
    </div>
    <div class="card-footer">
        <a href="@Url.Action("Index", "Support_64132077", new { area = "Admin" })" class="btn btn-primary">Quay lại</a>
    </div>
</div>

@model WebNoiThat_64132077.Models.EF.User

@{
    ViewBag.Title = "Cập nhật người dùng";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@section header{
    <div class="content-header">
        <div class="row mb-3">
            <div class="col-sm-6">
                <h3 class="m-0">Chỉnh sửa người dùng</h3>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a style="text-decoration: none" href="/Admin/Home_64132077">Home</a></li>
                    <li class="breadcrumb-item"><a style="text-decoration: none" href="/Admin/User_64132077">Người dùng</a></li>
                    <li class="breadcrumb-item active">Chỉnh sửa</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div>
}

<section class="section">
    <div class="section-body">
        <div class="card">
            @using (Html.BeginForm("Edit", "User_64132077", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => model.ID)
                <div class="card-header">
                    <h4>Thông tin người dùng</h4>
                </div>
                <div class="card-body">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                @Html.LabelFor(model => model.Username, htmlAttributes: new { @class = "control-label col-md-6" })
                                <div class="col-md-12">
                                    @Html.TextBoxFor(model => model.Username, new { @class = "form-control", @placeholder = "Nhập Tài khoản" })
                                    @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-6" })
                                <div class="col-md-12">
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <div class="input-group-text">
                                                <i class="fas fa-lock"></i>
                                            </div>
                                        </div>
                                        @Html.TextBoxFor(model => model.Password, new { @class = "form-control", @placeholder = "Nhập mật khẩu", @type = "password" })
                                    </div>
                                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                @Html.LabelFor(model => model.Fullname, htmlAttributes: new { @class = "control-label col-md-6" })
                                <div class="col-md-12">
                                    @Html.TextBoxFor(model => model.Fullname, new { @class = "form-control", @placeholder = "Nhập Tên người dùng" })
                                    @Html.ValidationMessageFor(model => model.Fullname, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-6" })
                                <div class="col-md-12">
                                    @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @placeholder = "Nhập Email" })
                                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                @Html.LabelFor(model => model.Image, htmlAttributes: new { @class = "control-label col-md-6" })
                                <div class="col-md-12 d-flex">
                                    @Html.TextBoxFor(model => model.Image, new { @class = "form-control", @id = "txtImage", @placeholder = "Đường dẫn image" })
                                    <button id="btnSelectImage" class="btn btn-outline-primary ml-2 col-sm-2 col-md-4 col-lg-2">Chọn ảnh</button>
                                    @Html.ValidationMessageFor(model => model.Image, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                @Html.LabelFor(model => model.Gender, htmlAttributes: new { @class = "control-label col-md-8" })
                                <div class="col-md-12 d-flex align-items-center">
                                    <div class="form-check mr-3">
                                        <label class="form-check-label">
                                            @Html.RadioButtonFor(model => model.Gender, "True", new { @class = "form-check-input", @checked = "checked" }) Nam
                                        </label>
                                    </div>
                                    <div class="form-check">
                                        <label class="form-check-label">
                                            @Html.RadioButtonFor(model => model.Gender, "False", new { @class = "form-check-input" }) Nữ
                                        </label>
                                    </div>
                                    @Html.ValidationMessageFor(model => model.Gender, "", new { @class = "text-danger ml-3" })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                @Html.LabelFor(model => model.Status, htmlAttributes: new { @class = "control-label  col-md-8 co-lg-6" })
                                <div class="col-md-12">
                                    <div class="checkbox">
                                        @Html.CheckBoxFor(model => model.Status)
                                        @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                @Html.LabelFor(model => model.Address, htmlAttributes: new { @class = "control-label col-md-6" })
                                <div class="col-md-12">
                                    @Html.TextBoxFor(model => model.Address, new { @class = "form-control", @placeholder = "Nhập địa chỉ" })
                                    @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                @Html.LabelFor(model => model.Phone, htmlAttributes: new { @class = "control-label col-md-10 col-lg-6" })
                                <div class="col-md-12">
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <div class="input-group-text">
                                                <i class="fas fa-phone"></i>
                                            </div>
                                        </div>
                                        @Html.TextBoxFor(model => model.Phone, new { @class = "form-control", @placeholder = "Nhập số điện thoại" })
                                    </div>
                                    @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                @Html.LabelFor(model => model.GroupID, "Nhóm người dùng", htmlAttributes: new { @class = "control-label col-md-12" })
                                <div class="col-md-12">
                                    <select name="GroupID" class="form-control">
                                        <option value="">Chọn nhóm</option>
                                        @foreach (var group in ViewBag.GroupID as List<SelectListItem>)
                                        {
                                            <option value="@group.Value" @(group.Value == Model.GroupID.ToString() ? "selected" : "")>
                                                @group.Text
                                            </option>
                                        }
                                    </select>
                                    @Html.ValidationMessageFor(model => model.GroupID, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-12 d-flex">
                            <input type="submit" value="Cập nhật" class="btn btn-outline-primary mr-4" />
                            @Html.ActionLink("Quay lại", "Index", null, new { @class = "btn btn-outline-dark" })
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
@section script{
    <script>
        $(document).ready(function () {
            $('#btnSelectImage').on('click', function (e) {
                e.preventDefault();
                var finder = new CKFinder();
                finder.selectActionFunction = function (url) {
                    $('#txtImage').val(url);
                };
                finder.popup();
            });

            CKEDITOR.replace('txtContent', {
                customConfig: '/Assets/admin/Plugin/ckeditor/config.js',
                allowedContent: true,

            });
        });
    </script>
}

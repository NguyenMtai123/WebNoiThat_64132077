@model WebNoiThat_64132077.Models.EF.User
@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@section header {
    <div class="content-header">
        <div class="row mb-3">
            <div class="col-sm-6">
                <h3 class="m-0">Thông tin người dùng</h3>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a style="text-decoration: none" href="/Admin/Home_64132077">Home</a></li>
                    <li class="breadcrumb-item"><a style="text-decoration: none" href="/Admin/User_64132077">Người dùng</a></li>
                    <li class="breadcrumb-item active">Thông tin</li>
                </ol>
            </div>
        </div>
    </div>
}

<div class="container">
    <div class="card shadow-lg p-4">
        <div class="row">
            <!-- Avatar và thông tin cơ bản -->
            <div class="col-md-4 text-center border-right">
                <img src="@(Model.Image ?? "~/images/default-avatar.png")"
                     alt="Avatar"
                     class="img-fluid rounded-circle mb-3 shadow"
                     style="max-width: 180px;">
                <h4 class="font-weight-bold mt-2">@Model.Fullname</h4>
                <p class="text-muted">@Model.Email</p>
                <span class="badge badge-@(Model.Status ? "success" : "danger")">
                    @(Model.Status ? "Hoạt động" : "Khóa")
                </span>
            </div>

            <!-- Thông tin chi tiết -->
            <div class="col-md-8">
                <h5 class="text-primary mb-3">Chi tiết người dùng</h5>
                <table class="table table-hover">
                    <tbody>
                        <tr>
                            <th scope="row" class="text-dark">Tài khoản:</th>
                            <td>@Model.Username</td>
                        </tr>
                        <tr>
                            <th scope="row" class="text-dark">Họ và Tên:</th>
                            <td>@Model.Fullname</td>
                        </tr>
                        <tr>
                            <th scope="row" class="text-dark">Email:</th>
                            <td>@Model.Email</td>
                        </tr>
                        <tr>
                            <th scope="row" class="text-dark">Giới tính:</th>
                            <td>@(Model.Gender ? "Nam" : "Nữ")</td>
                        </tr>
                        <tr>
                            <th scope="row" class="text-dark">Địa chỉ:</th>
                            <td>@Model.Address</td>
                        </tr>
                        <tr>
                            <th scope="row" class="text-dark">Số điện thoại:</th>
                            <td>@Model.Phone</td>
                        </tr>
                        <tr>
                            <th scope="row" class="text-dark">Nhóm người dùng:</th>
                            <td>@Model.UserGroup.Name</td>
                        </tr>
                        <tr>
                            <th scope="row" class="text-dark">Ngày cập nhật:</th>
                            <td>@(Model.UpdateDate.HasValue ? Model.UpdateDate.Value.ToString("dd/MM/yyyy HH:mm") : "Không xác định")</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Nút hành động -->
        <div class="mt-4 text-center">
            <a href="@Url.Action("Index", "User_64132077")" class="btn btn-secondary btn-sm">
                <i class="fas fa-arrow-left"></i> Quay lại
            </a>
            <a href="@Url.Action("Edit", "User_64132077", new { id = Model.ID })" class="btn btn-warning btn-sm">
                <i class="fas fa-edit"></i> Chỉnh sửa
            </a>
        </div>
    </div>
</div>

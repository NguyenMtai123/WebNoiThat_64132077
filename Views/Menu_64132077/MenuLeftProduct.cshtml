@model List<WebNoiThat_64132077.Models.EF.ProductCategory>

@if (Model != null && Model.Any())
{
    <div class="collapse show" id="widget-1">
        <div class="widget-body">
            <div class="filter-items filter-items-count">
                @foreach (var item in Model)
                {
                    <div class="filter-item">
                        <div class="custom-control">
                            @if (ViewBag.CateId == item.ID)
                            {
                                <a href="/danh-muc-san-pham/@item.SeoTitle-@item.ID"><label class="custom-control-label active">@item.Name</label></a>

                            }
                            else
                            {
                                <a href="/danh-muc-san-pham/@item.SeoTitle-@item.ID"><label class="custom-control-label">@item.Name</label></a>

                            }
                        </div><!-- End .custom-checkbox -->
                    </div><!-- End .filter-item -->
                }
            </div><!-- End .filter-items -->
        </div><!-- End .widget-body -->
    </div><!-- End .collapse -->
}

@model List<WebNoiThat_64132077.Models.EF.ProductCategory>
@if (Model != null || Model.Any())
{
    <h2 class="title-lg text-center mb-4">Shop theo danh mục</h2><!-- End .title-lg text-center -->

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-6 col-lg-3">
                <div class="banner banner-display banner-link-anim">
                    <a href="/danh-muc-san-pham/@item.SeoTitle-@item.ID">
                        <img src="@item.Image" alt="Banner" style="height:300px">
                    </a>

                    <div class="banner-content banner-content-center">
                        <h3 class="banner-title text-white"><a href="/danh-muc-san-pham/@item.SeoTitle-@item.ID">@item.Name</a></h3><!-- End .banner-title -->
                        <a href="/danh-muc-san-pham/@item.SeoTitle-@item.ID" class="btn btn-outline-white banner-link">Shop Now<i class="icon-long-arrow-right"></i></a>
                    </div><!-- End .banner-content -->
                </div><!-- End .banner -->
            </div><!-- End .col-sm-6 col-lg-3 -->
        }
    </div><!-- End .row -->

}

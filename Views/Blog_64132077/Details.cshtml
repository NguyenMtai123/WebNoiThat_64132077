@model WebNoiThat_64132077.Models.EF.Post
@{
    ViewBag.Title = "Detail - " + Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-header text-center">
    <div class="container">
        <h1 class="page-title">@Model.Name</h1>
    </div>
</div>

<nav aria-label="breadcrumb" class="breadcrumb-nav mb-2">
    <div class="container">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item"><a href="/tin-tuc">Tin tức</a></li>
            <li class="breadcrumb-item active" aria-current="page">@Model.Name</li>
        </ol>
    </div>
</nav>

<div class="page-content">
    <div class="container">
        <div class="entry">
            <figure class="entry-media">
                <img src="@Model.Image" alt="@Model.Name" style="width:100%; height:400px">
            </figure>

            <div class="entry-body">
                <div class="entry-meta">
                    <span>@(Model.CreateDate.HasValue ? Model.CreateDate.Value.ToString("dd/MM/yyyy") : "N/A")</span>
                    <span class="meta-separator">|</span>
                    <span>@Model.ViewCount Views</span>
                </div>

                <h2 class="entry-title">@Model.Name</h2>

                <div class="entry-content">
                    <p>@Model.Description</p>
                    <div>
                        @Html.Raw(Model.Detail) <!-- Hiển thị nội dung chi tiết bài viết -->
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script>
    </script>
}
